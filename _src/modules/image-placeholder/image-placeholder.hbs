{{#if symbol }}
  <svg xmlns="http://www.w3.org/2000/svg" style="display: none">
    <symbol id="rectangular">
      <rect id="svg_1" width="100%" height="100%" y="0" x="0" fill="#eee"/>
    </symbol>
  </svg>
{{/if }}

{{#if icon }}
  <svg class="icon" viewBox="0 0 30 30" width="30" height="30">
    <use xlink:href="#rectangular"/>
  </svg>
{{/if }}

{{#if width }}
  <svg class="{{class}}" viewBox="0 0 {{width}} {{height}}" width="{{width}}" height="{{height}}">
    <use xlink:href="#rectangular"/>
    <text x="50%" y="50%" text-anchor="middle" alignment-baseline="middle" font-size="16" dominant-baseline="middle" font-family="Arial" fill="#666">{{width}} x {{height}}</text>
  </svg>
{{/if }}
